@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid header-content">
            <div class="row" style="width: 100%">
                <div class="col-sm-3 vertical-center flex flex-row flex-align-center">
                    <h3>Exchange</h3>
                </div>                
                <div class="col-sm-9 vertical-center  text-align-right flex flex-row flex-align-center flex-justify-contend-end">
                    <h6>You are logged as @User.Identity.GetUserName()</h6>
                    <i class="fa fa-cog fa-2x" aria-hidden="true"></i>
                    @using (Html.BeginForm("LogOff", "Application", FormMethod.Post, new { id = "logoutForm" }))
                    {@Html.AntiForgeryToken();
                        <i class="fa fa-power-off fa-2x logoff" aria-hidden="true"></i>
                    }
                </div>
            </div>
        </div>
    </div>
    <script>
        $('body').on('click', '#logoutForm > i', function () {
            $('#logoutForm').submit();
        });
    </script>
}
